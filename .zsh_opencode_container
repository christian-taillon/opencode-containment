container-opencode() {
  local script_dir local_override
  script_dir="${${(%):-%N}:A:h}"
  local_override="$script_dir/.zsh_opencode_container.local"

  if [ -f "$local_override" ]; then
    # Keep personal tweaks in a gitignored local file.
    # shellcheck disable=SC1090
    source "$local_override"
  fi

  "$script_dir/bin/opencode-container" "$@"
}
